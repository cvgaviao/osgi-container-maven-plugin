<component-set>
    <components>
        <component>
            <role>org.codehaus.plexus.archiver.Archiver</role>
            <role-hint>zip</role-hint>
            <implementation>
                org.codehaus.plexus.archiver.zip.ZipArchiver
            </implementation>
            <instantiation-strategy>singleton</instantiation-strategy>
            <!-- <instantiation-strategy>per-lookup</instantiation-strategy> -->
        </component>
        <component>
            <role>org.codehaus.plexus.archiver.Archiver</role>
            <role-hint>tar</role-hint>
            <implementation>
                org.codehaus.plexus.archiver.tar.TarArchiver
            </implementation>
            <instantiation-strategy>singleton</instantiation-strategy>
            <!-- <instantiation-strategy>per-lookup</instantiation-strategy> -->
        </component>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping
            </role>
            <role-hint>osgi.container</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <phases>
                            <initialize>
                            </initialize>
                            <validate>
                            </validate>
                            <generate-resources>
                                ${project.groupId}:${project.artifactId}:${project.version}:cacheMavenArtifacts,
                                ${project.groupId}:${project.artifactId}:${project.version}:generateConfigurationFile
                            </generate-resources>
                            <process-resources>
                                io.takari.maven.plugins:takari-lifecycle-plugin:${takari.version}:process-resources
                            </process-resources>
                            <package>
                                ${project.groupId}:${project.artifactId}:${project.version}:assembly,
                                ${project.groupId}:${project.artifactId}:${project.version}:buildDockerImage,
                                ${project.groupId}:${project.artifactId}:${project.version}:tagDockerImage
                            </package>
                            <install>
                                io.takari.maven.plugins:takari-lifecycle-plugin:${takari.version}:install
                            </install>
                            <deploy>
                                ${project.groupId}:${project.artifactId}:${project.version}:pushDockerImage,
                                io.takari.maven.plugins:takari-lifecycle-plugin:${takari.version}:deploy
                            </deploy>
                        </phases>
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
    </components>
</component-set>
